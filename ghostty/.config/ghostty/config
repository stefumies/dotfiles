background-opacity = 0.95
background-blur-radius = 40

theme = Gruvbox Dark Hard

# Key Bindings 

# Splits
keybind = ctrl+r=reload_config
keybind = ctrl+up=new_split:up
keybind = ctrl+down=new_split:down
keybind = ctrl+left=new_split:left
keybind = ctrl+right=new_split:right

# Splits Navigation
keybind = ctrl+alt+k=goto_split:top
keybind = ctrl+alt+j=goto_split:bottom
keybind = ctrl+alt+h=goto_split:left
keybind = ctrl+alt+l=goto_split:right

# Font
font-family = "MonaspiceKe"
font-size = 14

# Window
window-width = 120 
window-height = 30 


